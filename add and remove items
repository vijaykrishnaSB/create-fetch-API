  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recap of Sessions - Suman Gangopadhyay</title>
    <style>
      /* CSS GOES HERE */
      body{
          font-family: Arial, Helvetica, sans-serif;
      }

      li{
          margin-bottom: :10px;
      }

      li button{
          font-size: 16px;
          margin-left:20px;
          color:greenyellow;
          background-color: black;
          width: 200px;
          height: 50px;
          border-radius: 10%;
      }
    </style>
  </head>
  <body>
    <!-- HTML code goes here -->
    <div>
      <label for="item">Enter a new Product</label>
      <input type="text" name="item" id="item" />
      <button>Add Product</button>
    </div>

    <ul></ul>

    <script>
      // Javascript code goes here
      "use strict";

      const list = document.querySelector("ul");
      const input = document.querySelector("input");
      const create_button = document.querySelector("button");

      //   ADD the products using a function

      create_button.onclick = function () {
        let myItem = input.value;
        input.value = "";

        const listItem = document.createElement("li");
        const listText = document.createElement("span");
        const delete_button = document.createElement("button");

        listItem.appendChild(listText);
        listText.textContent = myItem;
        listItem.appendChild(delete_button);
        delete_button.textContent = "Delete Product";
        list.appendChild(listItem);

        //Function to Delete Products
        delete_button.onclick = function (e) {
          list.removeChild(listItem);
        };
        
        input.focus();
      };
    </script>
  </body>
</html>
